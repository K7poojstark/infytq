
EX-40
SELECT * FROM Salesman WHERE SNAME LIKE '%e%' AND LOCATION LIKE '%o%';
UNION
SELECT * FROM Salesman WHERE SNAME LIKE '%a%' AND LOCATION LIKE '%a%';

EX-44
SELECT ID,ENAME,DEPT,E.COMPID,MAKE FROM Employee E INNER JOIN Computer C ON E.COMPID=C.COMPID;

EX-45
SELECT ID,ENAME,E.COMPID,MAKE FROM Employee E INNER JOIN Computer C ON E.COMPID=C.COMPID WHERE MODEL='Precision' OR 
MODEL='Edge';

EX-46
SELECT E.DEPT AS DEPT,COUNT(E.COMPID) "NUMBER OF COMPUTERS" FROM Computer C INNER JOIN Employee E ON 
E.COMPID = C.COMPID WHERE MAKE='Dell'GROUP BY E.DEPT;
